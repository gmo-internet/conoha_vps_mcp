{
	"name": "@gmo-internet/conoha-vps-mcp",
	"version": "0.4.1",
	"description": "日本語対応のConoHa VPS Model Context Protocol (MCP) サーバー",
	"author": "GMO Internet",
	"license": "Apache-2.0",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"conoha-vps-mcp": "dist/index.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"keywords": [
		"conoha",
		"vps",
		"mcp",
		"modelcontextprotocol",
		"openstack"
	],
	"homepage": "https://github.com/gmo-internet/conoha_vps_mcp",
	"bugs": {
		"url": "https://github.com/gmo-internet/conoha_vps_mcp/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gmo-internet/conoha_vps_mcp.git"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"NOTICE"
	],
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"build": "node esbuild.config.js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:mcpb": "mcpb pack",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"typecheck": "tsc --noEmit",
		"biome:ci": "biome ci .",
		"biome:fix": "biome check --write .",
		"test": "vitest run --coverage",
		"generate:notice": "node scripts/generate-notice.js",
		"inspector": "npx @modelcontextprotocol/inspector"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.23.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@anthropic-ai/mcpb": "2.0.1",
		"@biomejs/biome": "2.3.8",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.14",
		"esbuild": "0.27.0",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"vitest": "4.0.14"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
