{
	"name": "conoha-vps-mcp",
	"version": "0.0.1",
	"description": "ConoHa VPS MCP (Model Context Protocol) server written with Node.js",
	"type": "module",
	"main": "index.js",
	"keywords": [
		"conoha",
		"vps",
		"mcp",
		"modelcontextprotocol",
		"openstack"
	],
	"author": "GMO Internet",
	"license": "Apache-2.0",
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "FIXME: ",
		"start": "tsx src/index.ts",
		"typecheck": "tsc --noEmit",
		"biome:ci": "biome ci .",
		"biome:fix": "biome check --write .",
		"test": "vitest run --coverage",
		"dev:inspector": "npx @modelcontextprotocol/inspector pnpm start",
		"start:inspector": "npx @modelcontextprotocol/inspector pnpm start",
		"commit": "cz"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.3",
		"tsx": "^4.20.3",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.14.1",
		"cz-conventional-changelog": "^3.3.0",
		"@vitest/coverage-v8": "^3.2.3",
		"vitest": "^3.2.3"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
