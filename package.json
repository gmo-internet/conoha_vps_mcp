{
	"name": "conoha-vps-mcp",
	"version": "0.0.0",
	"description": "ConoHa VPS MCP (Model Context Protocol) server written with Node.js",
	"type": "module",
	"main": "dist/index.js",
	"keywords": [
		"conoha",
		"vps",
		"mcp",
		"modelcontextprotocol",
		"openstack"
	],
	"author": "GMO Internet",
	"license": "Apache-2.0",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"typecheck": "tsc --noEmit",
		"biome:ci": "biome ci .",
		"biome:fix": "biome check --write .",
		"test": "vitest run --coverage",
		"generate:notice": "node scripts/generate-notice.js",
		"dev:inspector": "npx @modelcontextprotocol/inspector pnpm start",
		"start:inspector": "npx @modelcontextprotocol/inspector pnpm start",
		"commit": "cz"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.3",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.15.32",
		"@vitest/coverage-v8": "3.2.4",
		"cz-conventional-changelog": "3.3.0",
		"tsx": "^4.20.3",
		"typescript": "^5.0.0",
		"vitest": "3.2.4"
	},
	"engines": {
		"node": ">=18.20.8"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
